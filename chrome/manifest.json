{
	"manifest_version": 2,
	"version": "1.3.0",
	"name": "__MSG_extName__",
	"description": "__MSG_extDescription__",
	"author": "Thomas Tavernier <thomas@tavernier.dev>",
	"default_locale": "en",
	"icons": {
		"128":	"assets/icon128.png"
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "popup/popup.html"
    },
	"content_scripts": [{
		"js": 		["extension/js/crunchyroll.js"],
		"matches": 	["*://www.crunchyroll.com/*"],
		"run_at":	"document_end"
		},
		{
		"js": 		["extension/js/gogoanime.js"],
		"matches": [ "*://*/*" ],
        "include_globs": [
            "*://*.gogoanime.*/*",
			"*://*.gogoanimes.*/*"
		],	
		"run_at":	"document_end"
		},
		{
		"js": 		["extension/js/youtube.js"],
		"matches": 	["*://www.youtube.com/*"],
		"run_at":	"document_idle"
		}]
}