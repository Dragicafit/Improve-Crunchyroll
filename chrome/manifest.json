{
	"manifest_version": 2,
	"version": "1.6.1",
	"name": "__MSG_extName__",
	"description": "__MSG_extDescription__",
	"author": "Thomas Tavernier <thomas@tavernier.dev>",
	"default_locale": "en",
	"icons": {
		"128": "assets/icon128.png"
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "popup/popup.html"
	},
	"content_scripts": [
		{
			"js": [
				"extension/js/funimation.js"
			],
			"matches": [
				"*://www.funimation.com/*"
			],
			"run_at": "document_idle"
		},
		{
			"js": [
				"extension/js/crunchyroll.js"
			],
			"matches": [
				"*://www.crunchyroll.com/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"extension/js/crunchyrollVideoPlayer.js"
			],
			"matches": [
				"*://static.crunchyroll.com/vilos/player.html"
			],
			"all_frames": true,
			"run_at": "document_idle"
		},
		{
			"js": [
				"extension/js/gogoanimes.js"
			],
			"matches": [
				"*://*.gogoanimes.tv/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"extension/js/hidive.js"
			],
			"matches": [
				"*://www.hidive.com/*"
			],
			"run_at": "document_idle"
		},
		{
			"js": [
				"extension/js/youtube.js"
			],
			"matches": [
				"*://www.youtube.com/*"
			],
			"run_at": "document_idle"
		}
	]
}