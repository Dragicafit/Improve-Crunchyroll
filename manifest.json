{
	"manifest_version": 2,
	"version": "2.0.4",
	"name": "__MSG_extName__",
	"description": "__MSG_extDescription__",
	"author": "Thomas Tavernier <thomas@tavernier.dev>",
	"default_locale": "en",
	"icons": {
		"128": "assets/icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.crunchyroll.com/*"
			],
			"js": [
				"extension/js/crunchyroll.js"
			],
			"css": [
				"extension/css/crunchyroll.css"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://static.crunchyroll.com/vilos/player.html"
			],
			"js": [
				"extension/js/crunchyrollVideoPlayer.js"
			],
			"css": [
				"extension/css/crunchyrollVideoPlayer.css"
			],
			"all_frames": true,
			"run_at": "document_idle"
		}
	]
}